doctype html
html(lang=en)
  include includes/head
  script(type="text/javascript" src="./public/js/menu.js")
  script(type="text/javascript" src="./public/js/settings.js")
  body
    include includes/header-menu
    include includes/menu
    content
      .profile
        .upper-part
          .picture
            - var imageSRC = "./public/images/userPP/" + pictureName
            img(src=imageSRC, alt="Profile Picture")
          .name-lang
            .username
              if username != ''
                p.gianttext= username
              else
                p.gianttext UserUndefined
            .languages
              each val, index in languagesArray
                if val == true
                  - var address = "./public/images/languages/" + index + ".svg"
                  .language
                    img(src=address, alt="index")
                    p.smalltext= index
        .bio
          p= bio
        hr
        .awards
          p.hugetext Awards
          button(disabled) Show All
          .award
          .award
    include includes/settings
    include includes/footerAtProfile