template.multi4
  .post(id="q{id}")
    .upper-part
      .question
        p.bigtext {question}
      .votes
        button.up
          img(src="./public/images/up-arrow.svg")
          p {upvotes}
        button.down
          p {downvotes}
          img(src="./public/images/down-arrow.svg")
    .answers
      .multi
        button#a1
          p {answer1}
        button#a2
          p {answer2}
        button#a3
          p {answer3}
        button#a4
          p {answer4}
    .bottom-bar
      button
        p Save
      button
        p Discussion
      button
        p {username}