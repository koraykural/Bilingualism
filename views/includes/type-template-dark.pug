template.type
  .post(id="q{id}")
    .upper-part
      .question 
        p.bigtext {question}
      .votes
        button.up
          img(src="./public/images/up-arrow.svg")
          p {upvotes}
        button.down
          p {downvotes}
          img(src="./public/images/down-arrow.svg")
    .answers
      form.type
        input(type="text" name="comment")
        button.submit(type="button")
          img(src="./public/images/dark/send.svg")
    .bottom-bar
      .actions-list
        button.actions
          img(src="./public/images/dark/question-menu.svg")
      button.comments
        p Answers ({numComments})
      button
        p {username}
